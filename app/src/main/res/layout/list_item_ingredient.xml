<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/shopping_ingredient_name_edittext"
        android:layout_width="200dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:hint="@string/ingredient_enter_ingredient_name"/>

    <Spinner
        android:id="@+id/ingredient_categoryspinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/shopping_ingredient_name_edittext"
        android:layout_marginLeft="0dp"
        app:layout_constraintRight_toLeftOf="@+id/shopping_ingredient_delete_button"
        android:layout_marginRight="0dp"/>

    <ImageButton
        android:id="@+id/shopping_ingredient_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_delete"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:color/transparent"
        android:contentDescription="@string/ingredient_delete_button"/>

    <View
        android:id="@+id/border"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#aa000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/shopping_ingredient_delete_button"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintHorizontal_bias="0.0"/>


</android.support.constraint.ConstraintLayout>